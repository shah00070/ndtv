<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ndtv.core.common.util.views.ResizableImageView

        android:id="@+id/news_widget_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.ndtv.core.common.util.views.RobotoCondensedBoldTextView
        android:id="@+id/news_widget_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/img_overlay_gradient"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="25dp"
        android:gravity="center|left"
        android:text="dsdjsjdjdsdkkdksldk"
        android:paddingBottom="5dp"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/widget_type_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_margin="10dp"
       />
</FrameLayout>
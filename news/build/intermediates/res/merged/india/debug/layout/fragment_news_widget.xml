<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:orientation="vertical">

    <com.ndtv.core.newswidget.ui.custom.CustomViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager_widget"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.ndtv.core.newswidget.ui.CirclePageIndicator
        android:id="@+id/page_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        app:line_centered="true" />
</FrameLayout>